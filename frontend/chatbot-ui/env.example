# AI Search Agent - Frontend Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development: http://localhost:8000
# Production: https://your-domain.com/api
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
REACT_APP_ENVIRONMENT=development

# Application name
REACT_APP_NAME=AI Search Agent

# Application version
REACT_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable debug mode
REACT_APP_DEBUG=false

# Enable analytics
REACT_APP_ENABLE_ANALYTICS=false

# Enable error reporting
REACT_APP_ENABLE_ERROR_REPORTING=false

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Default theme (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Enable dark mode
REACT_APP_ENABLE_DARK_MODE=true

# Maximum message history
REACT_APP_MAX_MESSAGE_HISTORY=50

# =============================================================================
# API TIMEOUTS
# =============================================================================

# Request timeout (milliseconds)
REACT_APP_REQUEST_TIMEOUT=30000

# Connection timeout (milliseconds)
REACT_APP_CONNECTION_TIMEOUT=10000

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Google Analytics ID (if using analytics)
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN (if using error reporting)
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# Enable hot reload
REACT_APP_HOT_RELOAD=true

# Mock API responses (for testing)
REACT_APP_MOCK_API=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production settings (uncomment for production)
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# REACT_APP_ENABLE_ANALYTICS=true
# REACT_APP_ENABLE_ERROR_REPORTING=true
# REACT_APP_ENABLE_DEVTOOLS=false
# REACT_APP_HOT_RELOAD=false