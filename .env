# Application
APP_ENV=dev
APP_SECRET=changeme
APP_NAME=AI Customer Agent
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/app
DATABASE_TEST_URL=postgresql+psycopg://postgres:postgres@db:5432/app_test

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_TEST_URL=redis://redis:6379/1

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRES=86400

# Payment
PAYMENT_PUBLIC_URL=https://payment.example/checkout/
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Webhooks
WEBHOOK_VERIFY_TOKEN=changeme
FACEBOOK_VERIFY_TOKEN=your-facebook-verify-token
ZALO_VERIFY_TOKEN=your-zalo-verify-token

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

