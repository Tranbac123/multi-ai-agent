              "mode": "raw",
              "raw": "{\n  \"name\": \"echo\",\n  \"args\": {\n    \"text\": \"Hello from Postman!\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{tools_service_port}}/v1/tools/exec",
              "host": ["{{base_url}}"],
              "port": "{{tools_service_port}}",
              "path": ["v1", "tools", "exec"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Retrieval Service",
      "item": [
