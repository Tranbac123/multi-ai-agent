          "name": "List Available Tools",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{tools_service_port}}/v1/tools",
              "host": ["{{base_url}}"],
              "port": "{{tools_service_port}}",
              "path": ["v1", "tools"]
            }
          },
          "response": []
        },
        {
          "name": "Execute Web Search Tool",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"web_search\",\n  \"args\": {\n    \"query\": \"latest AI news 2024\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{tools_service_port}}/v1/tools/exec",
              "host": ["{{base_url}}"],
              "port": "{{tools_service_port}}",
              "path": ["v1", "tools", "exec"]
            }
          },
          "response": []
        },
        {
          "name": "Execute Web Scrape Tool",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"web_scrape\",\n  \"args\": {\n    \"url\": \"https://news.ycombinator.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{tools_service_port}}/v1/tools/exec",
