    {
      "name": "Chat Adapters",
      "item": [
        {
          "name": "Facebook Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Hub-Signature",
                "value": "sha1=your_signature_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"object\": \"page\",\n  \"entry\": [\n    {\n      \"messaging\": [\n        {\n          \"sender\": {\n            \"id\": \"user_123\"\n          },\n          \"message\": {\n            \"text\": \"Hello, what can you help me with?\"\n          }\n        }\n      ]\n    }\n  ]\n}"
            },
            "url": {
