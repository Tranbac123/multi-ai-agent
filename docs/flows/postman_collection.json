          },
          "response": []
        },
        {
          "name": "Chat Completion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Explain quantum computing in simple terms\"\n    }\n  ],\n  \"model\": \"gpt-4o-mini\",\n  \"temperature\": 0.7\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{model_gateway_port}}/v1/chat",
              "host": ["{{base_url}}"],
              "port": "{{model_gateway_port}}",
              "path": ["v1", "chat"]
            }
          },
          "response": []
        }
      ]
