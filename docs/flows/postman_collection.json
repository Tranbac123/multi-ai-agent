{
  "info": {
    "name": "Multi-AI-Agent Platform - Local Development",
    "description": "Postman collection for testing the Multi-AI-Agent Platform services in local development environment",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "api_gateway_port",
      "value": "8000",
      "type": "string"
    },
    {
      "key": "model_gateway_port",
      "value": "8080",
      "type": "string"
    },
    {
      "key": "tools_service_port",
      "value": "8082",
      "type": "string"
    },
    {
      "key": "retrieval_service_port",
      "value": "8081",
      "type": "string"
    },
    {
      "key": "router_service_port",
      "value": "8083",
      "type": "string"
    },
    {
      "key": "admin_portal_port",
      "value": "8099",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "tenant_id",
      "value": "tenant_123",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "sess_456",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "API Gateway",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{api_gateway_port}}/healthz",
              "host": ["{{base_url}}"],
              "port": "{{api_gateway_port}}",
              "path": ["healthz"]
            }
          },
          "response": []
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{api_gateway_port}}/",
              "host": ["{{base_url}}"],
              "port": "{{api_gateway_port}}",
              "path": [""]
            }
          },
          "response": []
        },
        {
          "name": "Ask Question (Main Chat)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Tenant-Id",
                "value": "{{tenant_id}}"
              },
              {
                "key": "X-Request-Id",
                "value": "req_{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What's the weather like today?\",\n  \"session_id\": \"{{session_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{api_gateway_port}}/ask",
              "host": ["{{base_url}}"],
              "port": "{{api_gateway_port}}",
              "path": ["ask"]
            }
          },
          "response": []
        },
        {
          "name": "Chat Completion API",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are a helpful AI assistant.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"Hello, how are you?\"\n    }\n  ],\n  \"model\": \"gpt-4o-mini\",\n  \"temperature\": 0.7,\n  \"max_tokens\": 1000\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{api_gateway_port}}/v1/chat",
              "host": ["{{base_url}}"],
              "port": "{{api_gateway_port}}",
              "path": ["v1", "chat"]
            }
          },
          "response": []
        },
        {
          "name": "Web Scrape",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{api_gateway_port}}/web-scrape",
              "host": ["{{base_url}}"],
              "port": "{{api_gateway_port}}",
              "path": ["web-scrape"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Model Gateway",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
